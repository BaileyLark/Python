import cv2 
import time 
import numpy as np
import HandTrackingModule as htm

#Parama 
WCAM, HCAM = 640, 480

capture = cv2.VideoCapture(0)
capture.set(3, WCAM)
pTime = 0

detector = htm.handDetector(detectionCon=0.7)


while True:
    success, img = capture.read()
    img = detector.findHands(img)
    lmList = detector.findposition(img, draw=False)

    cTime = time.time()
    fps = 1/(cTime-pTime)
    pTime = cTime
    cv2.putText(img, f'fps:{fps}', (40, 70), cv2.FONT_HERSHEY_PLAIN, 1, (255,255,255), 2)

    cv2.imshow("img", img)
    cv2.waitKey(1)